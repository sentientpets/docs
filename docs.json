{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "GOCHI Documentation",
  "colors": {
    "primary": "#B1C777",
    "light": "#D1E3B0",
    "dark": "#31361D"
  },
  "favicon": {
    "light": "/images/favicon.png",
    "dark": "/images/favicon.png"
  },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "background": {
    "color": {
      "light": "#FFFFFF",
      "dark": "#FFFFFF"
    },
    "decoration": "windows"
  },
  "seo": {
    "metatags": {
      "og:title": "Your Gochi AI Companion On Solana",
      "og:description": "GOCHI is a blockchain-based virtual pet game that combines nostalgic Tamagotchi-style gameplay with cryptocurrency rewards on the Solana network. Players care for digital cat companions by feeding, playing with, and cleaning them to earn real SOL rewards.",
      "og:image": "/images/banner.jpg"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "Quickstart",
              "Official-Links"
            ]
          },
          {
            "group": "GOCHI Pet Mechanics & AI",
            "pages": [
              "Pet-Stats",
              "AI-Personality",
              "Care-Activities",
              "Pet-Health",
            ]
          },
          {
            "group": "Earning Mechanics",
            "pages": [
              "Care-To-Earn",
              "Token-Holding-Benefits",
              "Reward-Distribution",
              "Economic-Model"
            ]
          },
          {
            "group": "Points System",
            "pages": [
              "Pre-Launch-Points",
              "Referral-System",
              "Points-Conversion",
              "Post-Launch-Transition"
            ]
          },
          {
            "group": "Tokenomics",
            "pages": [
              "Token-Overview",
              "Tax-System",
              "Distribution-Model",
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/overview"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/user",
              "api-reference/pet",
              "api-reference/rewards"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://gochipet.ai",
          "icon": "globe"
        },
        {
          "anchor": "Twitter",
          "href": "https://x.com/gochionsol",
          "icon": "twitter"
        }
      ]
    }
  },
  "logo": {
    "light": "/images/logo.png",
    "dark": "/images/logo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@gochipet.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Play Now",
      "href": "https://gochipet.ai"
    }
  },
  "footer": {
    "socials": {
      "twitter": "https://x.com/gochionsol",
    }
  },
  "feedback": {
    "suggestEdit": false,
    "raiseIssue": false
  }
}